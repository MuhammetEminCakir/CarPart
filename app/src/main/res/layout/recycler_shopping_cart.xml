<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/recyclerShoppingCartImage"
                    android:layout_margin="10dp"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/choose_picture"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/recyclerShoppingCartName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Parça Adı"/>
                    <TextView
                        android:id="@+id/recyclerShoppingCartCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parça Kodu"/>
                    <TextView
                        android:id="@+id/recyclerShoppingCartPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parça Fiyatı"/>
                </LinearLayout>


            </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>